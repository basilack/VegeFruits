<section>
  <div class="container">
    <br>
    <h3>Orders</h3>
    <div class="mt-5">
<table class="table">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Date</th>
      <th scope="col">Address</th>
      <th scope="col">Pincode</th>
      <th scope="col">Mobile</th>
    <th scope="col">Total Amount</th>
      <th scope="col">Payment Method</th>
      <th scope="col">Status</th>
    <th scope="col">View Products</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}, {{this.deliveryDetails.state}}, {{this.deliveryDetails.country}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
      <td>{{this.totalAmount}} Dhs</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
       <td>
         <a href="/view-order-products/{{this._id}}" title="View Products" class="btn btn-danger btn-sm"> <i class='fas fa-eye' style='font-size:14px'></i></a>
        
       </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>
</section>